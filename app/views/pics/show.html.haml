#pic_show.row
  .text-center.col-md-6.offset-md-offset-3
    .panel.panel-default
      .panel.heading.pic_image
        = image_tag @pic.image.url
      .panel-body
        %h1= @pic.title
        %p= @pic.description

      .panel-footer
        .row
          .col-md-6
            %p.user
              by
              = @pic.user.email

          .col.md-6
            .btn-group.pull-right
              = link_to like_pic_path(@pic), method: :put, class: "btn btn-default" do
                %span.glyphicon.glyphicon-chevron-up
                = @pic.get_upvotes.size
              = link_to dislike_pic_path(@pic), method: :put, class: "btn btn-default" do
                %span.glyphicon.glyphicon-chevron-down
                = @pic.get_downvotes.size
              - if user_signed_in?
                = link_to "Fix Pic", edit_pic_path, class: "btn btn-info"
                = link_to "Delete", pic_path, method: :delete, data: { confirm: "are you sure!" }, class: "btn btn-danger"
